class RegistrationPage {

    get firstNameField () {
        return cy.get("#first-name")
        
    }
    get lastNameField(){
        cy.get("#last-name");
    }
    get emailField(){
        cy.get("#email");
    }
    get passwordField(){
        cy.get("#password");
    }
    get passwordconfirmationField(){
        cy.get("#password-confirmation");
    }
    get formcheckinputField(){
        cy.get(".form-check-input");
    }
    get buttonField(){
        cy.get("button");
    }
}

class CreateGallery{
    get titleInputField(){
        return cy.get("#title");
    }
    get descriptionInpturField(){
        return cy.get("#description");
    }
    get imageURLInputField(){
        return cy.get("input[placeholder='image url']");
    }
    createGalleryFunction(title, description, imageURL){
        this.titleInputField.type(title);
        this.descriptionInpturField.type(description);
        this.imageURLInputField.type(imageURL);
        cy.get("button").contains("Submit").click();
    }
}
export const createGallery = new CreateGallery();